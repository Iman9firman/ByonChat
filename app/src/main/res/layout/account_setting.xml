<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.byonchat.android.AccountSettingActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <RelativeLayout
                android:id="@+id/btn_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/backgroud_white"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    style="@style/TextLightBlue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:paddingTop="12dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="15dp"
                    android:text="Show Ads" />

                <Switch
                    android:id="@+id/switchBanner"
                    style="@style/TextRegularGrayMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@null"
                    android:paddingLeft="12dp"
                    android:paddingTop="12dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="15dp"
                    tools:ignore="NewApi" />
            </RelativeLayout>

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/backgroud_white">

                <TableRow>

                    <TextView
                        style="@style/TextLightBlue"
                        android:layout_width="wrap_content"
                        android:paddingLeft="12dp"
                        android:paddingTop="12dp"
                        android:paddingRight="12dp"
                        android:text="Display Name" />

                    <EditText
                        android:id="@+id/txt_name"
                        style="@style/TextRegularGrayMedium"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="Not Set"
                        android:maxLength="30"
                        android:paddingLeft="12dp"
                        android:paddingTop="8dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="15dp" />

                    <TextView
                        android:id="@+id/txt_count_name"
                        style="@style/TextRegularGrayMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp" />

                </TableRow>

                <TableRow>

                    <TextView
                        style="@style/TextLightBlue"
                        android:layout_width="wrap_content"
                        android:paddingLeft="12dp"
                        android:paddingTop="12dp"
                        android:paddingRight="12dp"
                        android:text="Gender" />

                    <Spinner
                        android:id="@+id/textGender"
                        style="@style/TextRegularGrayMedium"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1" />
                </TableRow>

                <TableRow>

                    <TextView
                        style="@style/TextLightBlue"
                        android:layout_width="wrap_content"
                        android:paddingLeft="12dp"
                        android:paddingTop="12dp"
                        android:paddingRight="12dp"
                        android:text="Birth Date" />

                    <EditText
                        android:id="@+id/txt_birth"
                        style="@style/TextRegularGrayMedium"
                        android:layout_weight="1"
                        android:background="@null"
                        android:editable="false"
                        android:gravity="left"
                        android:hint="Not Set"
                        android:paddingLeft="12dp"
                        android:paddingTop="8dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="15dp" />
                </TableRow>

                <TableRow>

                    <TextView
                        style="@style/TextLightBlue"
                        android:layout_width="wrap_content"
                        android:paddingLeft="12dp"
                        android:paddingTop="12dp"
                        android:paddingRight="12dp"
                        android:text="City" />

                    <EditText
                        android:id="@+id/txt_city"
                        style="@style/TextRegularGrayMedium"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="Not Set"
                        android:maxLength="99"
                        android:paddingLeft="12dp"
                        android:paddingTop="8dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="15dp" />
                </TableRow>

                <TableRow android:layout_marginBottom="15dp">

                    <TextView
                        style="@style/TextLightBlue"
                        android:layout_width="wrap_content"
                        android:paddingLeft="12dp"
                        android:paddingTop="12dp"
                        android:paddingRight="12dp"
                        android:text="Email" />

                    <EditText
                        android:id="@+id/txt_email"
                        style="@style/TextRegularGrayMedium"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="Not Set"
                        android:maxLength="99"
                        android:paddingLeft="12dp"
                        android:paddingTop="8dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="15dp" />
                </TableRow>

            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    style="@style/TextLightBlue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:paddingTop="12dp"
                    android:paddingRight="12dp"
                    android:text="Username Facebook" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="12dp"
                    android:background="#ffd7d7d7" />

                <EditText
                    android:id="@+id/txt_facebook"
                    style="@style/TextRegularGrayMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="Not Set"
                    android:paddingLeft="12dp"
                    android:paddingTop="8dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="15dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>