<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin10"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/views"
        android:layout_marginTop="@dimen/margin15"
        android:paddingLeft="@dimen/margin15"
        android:paddingRight="@dimen/margin15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/head_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin15"
            android:background="@color/darker_gray"
            app:layout_constraintTop_toBottomOf="@+id/head_title"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@+id/views"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <RadioGroup
            android:id="@+id/radioGrop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin15">
            <RadioButton
                android:id="@+id/rb1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="One"/>
            <RadioButton
                android:id="@+id/rb2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="One"/>
            <RadioButton
                android:id="@+id/rb3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="One"/>
            <RadioButton
                android:id="@+id/rb4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="One"/>
            <RadioButton
                android:id="@+id/rb5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="One"/>
            <RadioButton
                android:id="@+id/rb6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="One"/>
        </RadioGroup>
    </ScrollView>
    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/button_field"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/margin20"
        android:paddingRight="@dimen/margin20"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/scview">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="@dimen/margin15"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_proceed"
                style="@style/btn_submit_v11"
                android:text="Yes"
                android:layout_marginRight="5dp"/>

            <Button
                android:id="@+id/btn_cancel"
                style="@style/btn_submit_v111"
                android:text="No"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>
</android.support.constraint.ConstraintLayout>