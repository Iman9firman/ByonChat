<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cyan"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="@drawable/background_load_contact_top"
                  android:orientation="vertical">
            <RelativeLayout
              android:layout_weight="0.2"
              android:layout_height="fill_parent"
              android:layout_width="fill_parent"
              >
              <ImageView
                  android:id="@+id/image_view"
                  android:layout_alignParentTop="true"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:src="@drawable/bg_membership"
                  android:scaleType="fitStart"
                  android:layout_centerVertical="true" />
            </RelativeLayout>
            <LinearLayout android:layout_weight="0.8" android:orientation="vertical" android:layout_height="fill_parent" android:layout_width="fill_parent">
                <TextView
                    android:gravity="left"
                    android:id="@+id/textHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_up_byonchat"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@android:color/white"
                    android:layout_above="@+id/progressBar"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal" />
                <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/progressbar_register"
                    android:layout_centerHorizontal="true" />
               </LinearLayout>
        </LinearLayout>
</RelativeLayout>