<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
  >
	
	<RelativeLayout 
    	android:layout_width="match_parent"
    	android:layout_height="40dp"
    	android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin10">

	    <TextView
	        android:id="@+id/listmenuitemtext"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="24dp"
	        android:ellipsize="end"
	        android:singleLine="true"
	        android:text="TestTestTestTestTestTestTestTestTestTestTestTestTest"
	        android:textColor="@color/blueDark"
	        android:textSize="@dimen/margin15"
	        android:layout_alignRight="@+id/listmenuitemicon"
	        android:layout_marginRight="25dp"
	        android:textStyle="bold" />

	    <ImageView
	        android:id="@+id/listmenuitemicon"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentTop="true"
	        android:layout_marginRight="20dp"
	        android:layout_marginTop="5dp"
	        android:adjustViewBounds="true"
	        android:contentDescription="Image"
	        android:scaleType="centerCrop"
	        android:src="@drawable/arrow_right"
	        android:visibility="visible" />
    
    </RelativeLayout>
	
</RelativeLayout>