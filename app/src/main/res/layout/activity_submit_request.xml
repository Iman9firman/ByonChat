<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".ISSActivity.Reliever.SubmitRequestActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_back"/>

    <android.support.constraint.ConstraintLayout
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="match_parent"
        android:background="@drawable/edittext_personal">

        <Button
            android:id="@+id/btnDirection"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_margin="10dp"
            android:paddingRight="5dp"
            android:background="@drawable/button_background"
            android:drawableRight="@drawable/btn_map_ico"
            android:text="Direction"
            android:textAllCaps="false"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:padding="20dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Anda ditugaskan di :"
                android:textSize="15sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Tempat"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/idTempat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mall Kepala Gudang"
                    android:textSize="15sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Jam Kerja"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/idWaktu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="14:00 WITS"
                    android:textSize="15sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Tanggal"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/idTanggal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="30-02-2019"
                    android:textSize="15sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Sebagai"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/idJob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cleaning Service"
                    android:textSize="15sp"/>
            </LinearLayout>


            <TextView
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:id="@+id/kata2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="3"
                android:text="text"
                android:textSize="15sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnConfirm"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:background="@drawable/button_background"
                    android:textAllCaps="false"
                    android:text="Confirm" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content"
                    android:text="or"
                    android:textSize="15sp"/>

                <ImageView
                    android:id="@+id/btnCall"
                    android:layout_width="50dp"
                    android:layout_gravity="center"
                    android:layout_height="50dp"
                    android:src="@drawable/call_direct" />
            </LinearLayout>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>

</RelativeLayout>