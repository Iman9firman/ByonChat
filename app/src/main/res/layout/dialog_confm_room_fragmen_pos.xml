<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud_white_shadow"
    android:orientation="vertical">

    <LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:id="@+id/dataCustomers">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customers "
            android:textColor="@color/colorPrimary"
            android:padding="10dip"
            android:textSize="20sp"
            android:gravity="center"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_margin="10dip"
            android:background="@color/grayList"
            android:id="@+id/relativeLayout1"
            />

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">
        <TextView
            android:text="Name"
            android:layout_weight="2"
            android:textColor="#000000"
            android:padding="10dip"/>
        <EditText
            android:id="@+id/nameCustomer"
            android:maxLength="25"
            android:hint="Customer Name"
            android:textColor="@android:color/black"
            android:layout_weight="1"
            android:background="@android:drawable/editbox_background"
            android:gravity="center"
            android:padding="10dip"
            android:layout_marginRight="@dimen/margin10"/>
    </TableRow>

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">
        <TextView
            android:text="Phone "
            android:layout_weight="2"
            android:textColor="#000000"
            android:padding="10dip"/>
        <EditText
            android:id="@+id/phoneNumbers"
            android:maxLength="15"
            android:hint="Phone Number"
            android:textColor="@android:color/black"
            android:inputType="phone"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/margin10"
            android:background="@android:drawable/editbox_background"
            android:gravity="center"
            android:padding="10dip"/>
    </TableRow>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@android:color/black"
        android:text="Order By :" />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:id="@+id/myRadioGroup"
        android:checkedButton="@+id/sound"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:gravity="center">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sound"
            android:text="dine in" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vibration"
            android:text="take away" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/silent"
            android:text="go food" />

    </RadioGroup>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_margin="10dip"
        android:background="@color/grayList"
        android:id="@+id/relativeLayout2"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/submitCS"
        android:text="OK"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:id="@+id/dataOrders">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment "
            android:textColor="@color/colorPrimary"
            android:padding="10dip"
            android:textSize="20sp"
            android:gravity="center"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_margin="10dip"
            android:background="@color/grayList"
            android:id="@+id/relativeLayout3"
            />

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">
            <TextView
                android:text="Total "
                android:layout_weight="2"
                android:textColor="#000000"
                android:padding="10dip"/>
            <TextView
                android:id="@+id/total"
                android:maxLength="15"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/margin10"
                android:background="@android:drawable/editbox_background"
                android:gravity="center"
                android:padding="10dip"/>
        </TableRow>
    <TextView
        android:id="@+id/totalhide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/abc_text_size_large_material"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:text="jumlah"
        android:visibility="gone"
        android:textColor="@android:color/black"
        android:layout_gravity="center_horizontal" />
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">
            <TextView
                android:text="Pay "
                android:layout_weight="2"
                android:textColor="#000000"
                android:padding="10dip"/>
            <EditText
                android:id="@+id/bayar"
                android:maxLength="15"
                android:textColor="@android:color/black"
                android:inputType="phone"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/margin10"
                android:background="@android:drawable/editbox_background"
                android:gravity="center"
                android:padding="10dip"/>
        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">
            <TextView
                android:text="Change "
                android:layout_weight="2"
                android:textColor="#000000"
                android:padding="10dip"/>
            <TextView
                android:id="@+id/kembalian"
                android:maxLength="15"
                android:textColor="@android:color/black"
                android:inputType="phone"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/margin10"
                android:background="@android:drawable/editbox_background"
                android:gravity="center"
                android:padding="10dip"/>
        </TableRow>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/submitDone"
            android:text="OK"
            android:layout_gravity="center_horizontal" />

</LinearLayout>

</LinearLayout>