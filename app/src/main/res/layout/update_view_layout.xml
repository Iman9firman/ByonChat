<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/all_background"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">
    <android.support.v7.widget.CardView
        android:id="@+id/content_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/margin20"
        android:layout_marginRight="@dimen/margin20"
        card_view:cardBackgroundColor="#E6E6E6"
        card_view:cardCornerRadius="@dimen/margin70"
        card_view:cardElevation="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin10"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin20"
            android:paddingTop="@dimen/margin20"
            android:paddingRight="@dimen/margin20"
            android:paddingBottom="@dimen/margin20"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update Required!"
                android:textSize="@dimen/text16"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin5"
                android:layout_marginBottom="@dimen/margin10">

                <TextView
                    android:id="@+id/tvText"
                    android:gravity="center"
                    android:text="Need update now"
                    android:textSize="@dimen/text16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin10"
                android:layout_marginLeft="@dimen/margin10"
                android:layout_marginRight="@dimen/margin10"
                android:weightSum="2">

                <Button
                    android:id="@+id/laterBtn"
                    android:text="Later"
                    style="@style/btn_submit_v11_f"
                    android:textColor="@color/black_overlay"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/margin5"
                    android:layout_marginLeft="@dimen/margin5"/>

                <Button
                    android:id="@+id/updateBtn"
                    android:text="Update"
                    style="@style/btn_submit_v11"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/margin5"
                    android:layout_marginLeft="@dimen/margin5"/>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>