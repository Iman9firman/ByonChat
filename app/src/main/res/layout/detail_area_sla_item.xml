<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/layoutTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/margin10"
                android:layout_marginRight="@dimen/margin10"
                android:scaleType="fitCenter"
                android:src="@drawable/bt_right"
                android:tint="@color/carbon_black" />

            <TextView
                android:id="@+id/txtDeatailArea"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="left|center"
                android:padding="@dimen/margin5"
                android:text="Sample Detail Area"
                android:textColor="@color/grayDark" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout_foto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutTitle"
            android:weightSum="3">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin4"
                android:layout_weight="1"
                android:scaleType="fitCenter">

                <ImageView
                    android:id="@+id/start_check"
                    android:layout_width="@dimen/margin30"
                    android:layout_height="@dimen/margin30"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/margin8"
                    android:layout_marginRight="@dimen/margin8"
                    android:elevation="@dimen/margin3"
                    android:src="@drawable/ic_success"
                    android:visibility="gone" />

                <com.byonchat.android.view.SquareFrameLayout
                    android:id="@+id/square1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:id="@+id/cardview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="5dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ProgressBar
                                android:id="@+id/progressBarStart"
                                style="?android:attr/progressBarStyleLarge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:layout_margin="@dimen/margin25"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/logo_item_grid"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/margin15"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_cmr" />
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>
                </com.byonchat.android.view.SquareFrameLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/square1"
                    android:gravity="center"
                    android:text="Start"
                    android:textColor="@color/grayDark" />

                <Button
                    android:id="@+id/button_submit_start"
                    style="@style/btn_submit_v1"
                    android:layout_below="@id/square1"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="@dimen/margin15"
                    android:text="SUBMIT"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin4"
                android:layout_weight="1"
                android:scaleType="fitCenter">

                <ImageView
                    android:id="@+id/proses_check"
                    android:layout_width="@dimen/margin30"
                    android:layout_height="@dimen/margin30"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/margin8"
                    android:layout_marginRight="@dimen/margin8"
                    android:elevation="@dimen/margin3"
                    android:src="@drawable/ic_success"
                    android:visibility="gone" />

                <com.byonchat.android.view.SquareFrameLayout
                    android:id="@+id/square2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="5dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ProgressBar
                                android:id="@+id/progressBarProgres"
                                style="?android:attr/progressBarStyleLarge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:layout_margin="@dimen/margin25"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/logo_item_grid2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/margin15"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_cmr" />
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>
                </com.byonchat.android.view.SquareFrameLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/square2"
                    android:gravity="center"
                    android:text="On Process"
                    android:textColor="@color/grayDark" />

                <Button
                    android:id="@+id/button_submit_process"
                    style="@style/btn_submit_v1"
                    android:layout_below="@id/square2"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="@dimen/margin15"
                    android:text="SUBMIT"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin4"
                android:layout_weight="1"
                android:scaleType="centerCrop">

                <ImageView
                    android:id="@+id/done_check"
                    android:layout_width="@dimen/margin30"
                    android:layout_height="@dimen/margin30"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/margin8"
                    android:layout_marginRight="@dimen/margin8"
                    android:elevation="@dimen/margin3"
                    android:src="@drawable/ic_success"
                    android:visibility="gone" />

                <com.byonchat.android.view.SquareFrameLayout
                    android:id="@+id/square3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="5dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ProgressBar
                                android:id="@+id/progressBarDone"
                                style="?android:attr/progressBarStyleLarge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:layout_margin="@dimen/margin25"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/logo_item_grid3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/margin15"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_cmr" />
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>
                </com.byonchat.android.view.SquareFrameLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/square3"
                    android:gravity="center"
                    android:text="Done"
                    android:textColor="@color/grayDark" />

                <Button
                    android:id="@+id/button_submit_done"
                    style="@style/btn_submit_v1"
                    android:layout_below="@id/square3"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="@dimen/margin15"
                    android:text="SUBMIT"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/linear_layout_foto"
            android:layout_margin="@dimen/margin5"
            android:background="@color/grey" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>