<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <com.byonchat.android.widget.ToolbarWithIndicator
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <ImageView
                android:id="@+id/toolbar_indi"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/fab_margin"
                android:background="@drawable/circle_white"
                app:srcCompat="@drawable/ic_gagal" />

        </com.byonchat.android.widget.ToolbarWithIndicator>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:id="@+id/mainScrooll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.byonchat.android.FragmentDinamicRoom.DinamicRoomTaskActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearValue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin10"
                android:layout_marginRight="@dimen/margin10"
                android:layout_marginBottom="@dimen/margin10"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:visibility="gone"
                android:weightSum="1"></LinearLayout>

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin10"
                android:background="@drawable/backgroud_white"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/margin50"
                android:weightSum="1">

                <TextView
                    android:id="@+id/textLokasi"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/margin10"
                    android:layout_marginRight="@dimen/margin10"
                    android:padding="@dimen/margin5"
                    android:text="JJT"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/grayList" />

                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textLokasi"
                    android:layout_marginLeft="@dimen/margin10"
                    android:layout_marginTop="@dimen/margin3"
                    android:layout_marginRight="@dimen/margin10"
                    android:layout_marginBottom="@dimen/margin3"
                    android:textColor="@android:color/black" />


                <TextView
                    android:id="@+id/progress_sla"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin10"
                    android:layout_marginRight="@dimen/margin10"
                    android:padding="@dimen/margin5"
                    android:textAlignment="textEnd"
                    android:textColor="@android:color/black" />

                <com.multilevelview.MultiLevelRecyclerView

                    android:id="@+id/recy_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin5"
                    android:layout_marginTop="@dimen/margin10"
                    android:layout_marginRight="@dimen/margin5"
                    android:layout_marginBottom="@dimen/margin10"
                    tools:ignore="MissingConstraints" />

                <FrameLayout
                    android:id="@+id/container_sla"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin5"
                    android:layout_marginTop="@dimen/margin10"
                    android:layout_marginRight="@dimen/margin5"
                    android:layout_marginBottom="@dimen/margin10"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</android.support.design.widget.CoordinatorLayout>