<?xml version="1.0" encoding="utf-8"?>
<com.byonchat.android.view.SquareFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:background="@drawable/folder_placeholder"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/album_text_gradient"
        android:orientation="vertical"
        android:paddingTop="@dimen/margin20"
        android:paddingRight="@dimen/padding_small"
        android:paddingBottom="@dimen/padding_small"
        android:paddingLeft="@dimen/padding_small">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:gravity="left"
            android:maxLines="3"
            android:textColor="@color/white"
            android:textSize="@dimen/margin14" />

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:layout_toRightOf="@id/tv_name"
            android:gravity="right"
            android:textColor="@color/grey"
            android:textSize="@dimen/margin14" />
    </RelativeLayout>
</com.byonchat.android.view.SquareFrameLayout>