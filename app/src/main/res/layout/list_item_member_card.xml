<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/margin10"
   >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout4"
        android:orientation="horizontal">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/topPanelLeft"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentTop="true"
            android:id="@+id/topPanelcenter"
            android:layout_toLeftOf="@+id/topPanelRight"
            android:layout_toRightOf="@+id/topPanelLeft"
           />
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/topPanelRight"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout5"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/topPanelLeft2"
            android:background="@drawable/bg_card_top_left"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" >
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/bg_card_top_center"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/topPanelRight2"
            android:layout_toRightOf="@+id/topPanelLeft2"
           />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:id="@+id/txt_name_card"
            android:singleLine="true"
            android:layout_toLeftOf="@+id/img_card_logo"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/topPanelLeft2"/>
        <ImageView
            android:id="@+id/img_card_logo"
            android:layout_width="@dimen/margin20"
            android:layout_height="@dimen/margin20"
            android:layout_centerVertical="true"
            android:layout_alignBottom="@+id/topPanelRight2"
            android:layout_toLeftOf="@+id/topPanelRight2"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/topPanelRight2"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_card_top_right"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            >
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>