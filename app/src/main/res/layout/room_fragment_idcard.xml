<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/relative_id_card"
        android:layout_width="match_parent"
        android:paddingTop="@dimen/margin70"
        android:layout_height="match_parent"
        android:background="@color/carbon_black">

        <ImageView
            android:id="@+id/id_cards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin10" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:orientation="vertical"
        app:layout_anchor="@+id/relative_id_card"
        app:layout_anchorGravity="right|top">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/main_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ico_share"
            android:backgroundTint="@color/colorPrimary"
            app:layout_anchor="@+id/relative_id_card"
            app:layout_anchorGravity="right|top" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/card_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:tint="@color/white"
            android:visibility="gone"
            app:srcCompat="@drawable/bus_card" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/all_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:visibility="gone"
            android:tint="@color/white"
            app:srcCompat="@drawable/pdf_ico" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/who_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:visibility="gone"
            android:tint="@color/white"
            app:srcCompat="@drawable/pdf_ico" />
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>