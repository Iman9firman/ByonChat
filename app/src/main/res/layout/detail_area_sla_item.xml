<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:id="@+id/layoutTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:scaleType="fitCenter"
                android:tint="@color/carbon_black"
                android:layout_marginRight="@dimen/margin10"
                android:layout_marginLeft="@dimen/margin10"
                android:src="@drawable/bt_right"/>
            <TextView
                android:id="@+id/txtDeatailArea"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="left|center"
                android:padding="@dimen/margin5"
                android:textColor="@color/grayDark"
                android:text="Sample Detail Area"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_layout_foto"
            android:layout_below="@+id/layoutTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">
            <RelativeLayout
                android:layout_margin="@dimen/margin4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:layout_weight="1">
                <com.byonchat.android.view.SquareFrameLayout
                    android:id="@+id/square1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:id="@+id/cardview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="5dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:id="@+id/start_check"
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/check_ok"
                                android:layout_alignParentEnd="true"
                                android:elevation="@dimen/margin3"/>
                            <ImageView
                                android:id="@+id/logo_item_grid"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/margin15"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_cmr"/>
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>
                </com.byonchat.android.view.SquareFrameLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Start"
                    android:textColor="@color/grayDark"
                    android:gravity="center"
                    android:layout_below="@+id/square1"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_margin="@dimen/margin4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:layout_weight="1">
                <com.byonchat.android.view.SquareFrameLayout
                    android:id="@+id/square2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="5dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:id="@+id/proses_check"
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/check_ok"
                                android:layout_alignParentEnd="true"
                                android:elevation="@dimen/margin3"/>
                            <ImageView
                                android:id="@+id/logo_item_grid2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/margin15"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_cmr"/>
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>
                </com.byonchat.android.view.SquareFrameLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="On Process"
                    android:textColor="@color/grayDark"
                    android:gravity="center"
                    android:layout_below="@+id/square2"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_margin="@dimen/margin4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:layout_weight="1">
                <com.byonchat.android.view.SquareFrameLayout
                    android:id="@+id/square3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="5dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:id="@+id/done_check"
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/check_ok"
                                android:layout_alignParentEnd="true"
                                android:elevation="@dimen/margin3"/>
                            <ImageView
                                android:id="@+id/logo_item_grid3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/margin15"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_cmr"/>
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>
                </com.byonchat.android.view.SquareFrameLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Done"
                    android:gravity="center"
                    android:textColor="@color/grayDark"
                    android:layout_below="@+id/square3"/>
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"
            android:layout_margin="@dimen/margin5"
            android:layout_below="@+id/linear_layout_foto"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>