<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainScrooll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.byonchat.android.FragmentDinamicRoom.DinamicRoomTaskActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin10"
            android:background="@drawable/backgroud_white"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/margin50"
            android:weightSum="1">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin5"
                android:text="Lokasi"
                android:textColor="@android:color/black"
                android:textColorHint="@color/grayList" />

            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin3"
                android:layout_marginBottom="@dimen/margin3"
                android:textColor="@android:color/black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@color/grey" />

            <LinearLayout
                android:id="@+id/listRequest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"></LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@color/grey" />

            <Button
                android:id="@+id/btn_add_cild"
                android:layout_width="@dimen/margin100"
                android:layout_height="@dimen/margin30"
                android:layout_gravity="right"
                android:background="@drawable/oval_btn_room"
                android:padding="5dp"
                android:text="Add"
                android:textAllCaps="false"
                android:textColor="@drawable/selector_txt_blue_white"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin30"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/margin30"
                android:layout_marginTop="@dimen/margin30"
                android:layout_marginRight="@dimen/margin30"
                android:background="@drawable/oval_btn_room"
                android:padding="5dp"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="@drawable/selector_txt_blue_white"
                android:textSize="14sp" />

        </LinearLayout>


    </LinearLayout>

</ScrollView>

