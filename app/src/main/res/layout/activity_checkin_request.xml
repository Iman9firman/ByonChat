<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".ISSActivity.Reliever.SubmitRequestActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_back"/>

    <android.support.constraint.ConstraintLayout
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="match_parent"
        android:background="@drawable/edittext_personal">

        <Button
            android:id="@+id/btnDirection"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_margin="10dp"
            android:paddingRight="5dp"
            android:background="@drawable/button_background"
            android:drawableRight="@drawable/btn_map_ico"
            android:text="Direction"
            android:textAllCaps="false"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:padding="20dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Anda ditugaskan di :" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView android:textSize="15sp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Tempat" />

                <TextView android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : " />

                <TextView android:textSize="15sp"
                    android:id="@+id/idTempat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mall Kepala Gudang" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView android:textSize="15sp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Jam Kerja" />

                <TextView android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : " />

                <TextView android:textSize="15sp"
                    android:id="@+id/idWaktu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="14:00 WITS" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView android:textSize="15sp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Tanggal" />

                <TextView android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : " />

                <TextView android:textSize="15sp"
                    android:id="@+id/idTanggal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="30-02-2019" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView android:textSize="15sp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Sebagai" />

                <TextView android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : " />

                <TextView android:textSize="15sp"
                    android:id="@+id/idJob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cleaning Service" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@color/grey"/>

            <TextView android:textSize="15sp"
                android:id="@+id/kata2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="3"
                android:text="Apabila sudah sampai mohon menghubungi requester anda dengan melakukan chatting atau telepon"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <ImageView
                    android:id="@+id/btnChat"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/chat_direct"/>
                <TextView android:textSize="15sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:text="or"/>
                <ImageView
                    android:id="@+id/btnCall"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/call_direct"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@color/grey"/>

            <TextView android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Klik tombol check in di bawah ini"/>

            <Button
                android:id="@+id/btnCheckIN"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_height="25dp"
                android:background="@drawable/button_background"
                android:textAllCaps="false"
                android:text="Check In"/>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</RelativeLayout>