<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_child"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin5"
    android:paddingLeft="@dimen/margin10"
    android:paddingRight="@dimen/margin10"
    android:paddingTop="@dimen/margin5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:orientation="vertical"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:id="@+id/txt_numb"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:textColor="@color/grayDark" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="9"
                        android:orientation="vertical"
                        android:weightSum="10">

                        <TextView
                            android:id="@+id/txt_check_box"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:minLines="2"
                            android:textColor="@color/grayDark"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/editText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin5"
                            android:layout_marginTop="@dimen/margin10"
                            android:background="@drawable/backgroud_conversation"
                            android:gravity="left"
                            android:hint="note"
                            android:maxLines="3"
                            android:minLines="3"
                            android:padding="@dimen/margin5"
                            android:textColor="@color/grayDark"
                            android:textColorHint="@color/grayTab"
                            android:textSize="14sp"
                            android:visibility="visible" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin10"
                            android:layout_marginTop="@dimen/margin10"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageA"
                                android:layout_width="@dimen/margin50"
                                android:layout_height="@dimen/margin50"
                                android:layout_marginRight="@dimen/margin5"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_add_foto" />

                            <ImageView
                                android:id="@+id/imageB"
                                android:layout_width="@dimen/margin50"
                                android:layout_height="@dimen/margin50"
                                android:layout_marginRight="@dimen/margin5"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_add_foto" />

                            <ImageView
                                android:id="@+id/imageC"
                                android:layout_width="@dimen/margin50"
                                android:layout_height="@dimen/margin50"
                                android:layout_marginRight="@dimen/margin5"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_add_foto" />

                            <ImageView
                                android:id="@+id/imageD"
                                android:layout_width="@dimen/margin50"
                                android:layout_height="@dimen/margin50"
                                android:layout_marginRight="@dimen/margin5"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_add_foto" />
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>


            <RadioGroup
                android:id="@+id/pilihan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2">

                <RadioButton
                    android:id="@+id/radiOK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:text="OK"
                    android:textColor="@color/grayDark" />

                <RadioButton
                    android:id="@+id/radiNOK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:text="Not OK"
                    android:textColor="@color/grayDark" />

            </RadioGroup>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>