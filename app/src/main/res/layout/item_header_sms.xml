<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/margin8"
    android:paddingTop="@dimen/margin8">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/item_arrow"
        android:layout_toStartOf="@+id/item_arrow">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin8">

            <TextView
                android:id="@+id/noCicilan"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingLeft="@dimen/margin8"
                android:text="1"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tglJatuhTempo"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_weight="1"
                android:gravity="left"
                android:textColor="@android:color/black" />
            <TextView
                android:id="@+id/no_awb"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_weight="1"
                android:gravity="left"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/harusBayar"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_weight="1"
                android:gravity="left"
                android:textColor="@android:color/black" />
        </TableRow>
    </TableLayout>

    <ImageView
        android:id="@+id/item_arrow"
        android:layout_width="@dimen/image_final_width"
        android:layout_height="@dimen/image_final_width"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/bt_dn" />

</RelativeLayout>
