<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin10"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/header_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="Facility Services, Cleaning Service, 28 Jan 2019 jam 10:00 - 28 Jan 2019 jam 14:00, 5 orang"
            android:textColor="@color/byonchat_secondary_text"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/liner_hider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_name"
            android:layout_alignParentRight="true"
            android:weightSum="10"
            android:orientation="horizontal">

            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/spinnerGender"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin7"
                android:layout_marginBottom="@dimen/margin7"
                android:layout_weight="10"
                android:textColor="@android:color/black"/>

            <ImageView
                android:id="@+id/header_img_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_weight="7"
                android:src="@android:drawable/ic_menu_more" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/liner_hider"
            android:background="@color/byonchat_divider" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/frame_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin5"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max. selected :"
                android:textColor="@color/byonchat_primary_text"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/jumlahReq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textColor="@color/byonchat_primary_text"
                android:textSize="16sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/child_button_cancel_approve"
                style="@style/btn_submit_v11"
                android:layout_alignParentRight="true"
                android:drawableRight="@drawable/btn_map_ico"
                android:drawablePadding="@dimen/margin5"
                android:gravity="center"
                android:paddingRight="5dp"
                android:text="Maps"
                android:textAllCaps="false" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
