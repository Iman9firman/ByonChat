<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:layout_height="fill_parent">
    <LinearLayout
        android:id="@+id/backgroundButton"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:background="@color/softBlue1"
        >

        <TableLayout
            android:id="@+id/widget135"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:orientation="vertical"
            android:paddingRight="@dimen/margin5"
            android:paddingLeft="@dimen/margin5"
            >
            <TableRow>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Brands"
                    android:id="@+id/btnBrand"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    android:textColor="@drawable/selector_txt_blue_white"
                    android:background="@drawable/oval_btn_room"
                    android:padding="5dp"
                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Celebs"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/btnCeleb"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    android:textColor="@drawable/selector_txt_blue_white"
                    android:background="@drawable/oval_btn_room"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Persons"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/btnPerson"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    android:textColor="@drawable/selector_txt_blue_white"
                    android:background="@drawable/oval_btn_room"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    />
            </TableRow>
        </TableLayout>
    </LinearLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        android:background="@drawable/tab_indicator_main_room"
        app:tabIndicatorColor="@color/softBlue2"
        app:tabIndicatorHeight="5dp"
        app:tabTextColor="@color/grayOffTab"
        app:tabTextAppearance="@style/collapsedappbarBold"
        app:tabSelectedTextColor="@color/softBlue2"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMaxWidth="0dp"
        app:tabGravity="fill"
        app:tabMode="fixed" >
    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
</LinearLayout>
