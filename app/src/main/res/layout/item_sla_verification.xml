<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/margin15"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="@dimen/margin35"
            android:elevation="5dp"
            android:innerRadius="0dp"
            android:padding="10dp"
            android:paddingBottom="@dimen/margin30"
            android:shape="ring"
            android:thicknessRatio="1.9"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/margin20"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="@dimen/margin15"
                    android:layout_weight="1"
                    android:inputType="text|textMultiLine"
                    android:padding="5dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin20"
                    android:layout_marginRight="@dimen/margin20"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="@dimen/margin8">

                        <RelativeLayout
                            android:layout_width="@dimen/margin100"
                            android:layout_height="@dimen/margin100"
                            android:background="@color/gray">

                            <ImageView
                                android:id="@+id/imageBefore"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:scaleType="fitCenter" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:background="@color/blue"
                                android:gravity="center"
                                android:inputType="text|textMultiLine"
                                android:padding="2dp"
                                android:text="Before"
                                android:textColor="@color/white" />

                        </RelativeLayout>
                    </FrameLayout>

                    <TextView
                        android:id="@+id/keterangan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/margin5"
                        android:background="@drawable/rounder_editext"
                        android:inputType="text|textMultiLine"
                        android:maxLines="4"
                        android:padding="5dp"
                        android:textColor="@color/black" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin20"
                    android:layout_marginTop="@dimen/margin10"
                    android:layout_marginRight="@dimen/margin20"
                    android:layout_marginBottom="@dimen/margin15"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="@dimen/margin8">

                        <RelativeLayout
                            android:layout_width="@dimen/margin100"
                            android:layout_height="@dimen/margin100"
                            android:background="@drawable/profile_rounded_border">

                            <ImageView
                                android:id="@+id/imageAfter"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/gray"
                                android:scaleType="fitXY" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:background="@color/blue"
                                android:gravity="center"
                                android:inputType="text|textMultiLine"
                                android:padding="2dp"
                                android:text="After"
                                android:textColor="@color/white" />

                        </RelativeLayout>

                    </FrameLayout>

                    <TextView
                        android:id="@+id/notess"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/margin5"
                        android:background="@drawable/rounder_editext"
                        android:hint="Note..."
                        android:inputType="text|textMultiLine"
                        android:maxLines="4"
                        android:padding="5dp"
                        android:textColor="@color/black" />

                </LinearLayout>


            </LinearLayout>


        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <ImageButton
        android:id="@+id/imgVerif"
        android:layout_width="@dimen/margin65"
        android:layout_height="@dimen/margin65"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
